                    }
                },
                {
                    id: 'graphics_card_issue',
                    conditions: {
                        display: 'no_display',
                        power: 'normal_power',
                        sounds: 'silent'
                    },
                    diagnosis: {
                        problem: 'Problema con la Tarjeta Gr谩fica',
                        description: 'La tarjeta gr谩fica no est谩 funcionando correctamente.',
